script(type="text/html" id="listEditor_table_category")
    | {{for languages}}
    | {{for ~root.os ~languageCode=code}}
    .list(data-language-code="{{:~languageCode}}" data-os-code="{{:code}}" class="hidden")
        table
            tr
                th ステータス
                th コード
                th カテゴリ名
                //- th 時間帯おすすめ
                th 操作

            | {{for ~root.categories[~languageCode][code]}}
            tr.listItem(data-index="{{:#index}}")
                td
                    .input
                        label(class="{{if isEnabled == 1}}selected{{/if}}")
                            | <input data-fieldname="isEnabled" type="checkbox" value="1" {{if isEnabled == 1}}checked="checked"{{/if}}>
                            | 有効
                td
                    .input
                        input(data-fieldname="code" type="text" value="{{:code}}")
                td
                    .input
                        input(data-fieldname="name" type="text" value="{{:name}}")
                //- td
                //-     label
                //-         | <input data-fieldname="enableTimezoneSuggest" type="checkbox" value="1" {{if enableTimezoneSuggest == 1}}checked="checked"{{/if}}>
                //-         | 表示
                td
                    .menu
                        .button.actionRemoveListItem ×
                        .button.actionUpPosition ↑
                        .button.actionDownPosition ↓

            | {{/for}}

        .menu
            .button.actionAddListItem 追加する

    | {{/for}}
    | {{/for}}

