script(type="text/html" id="listEditor")
    | {{if enableEnv == true}}
    .listEnviromentSelector
        .language
            | {{for languages}}
            .languageItem(class="actionSelectEnviroment {{if #index == 0}}selected{{/if}}" data-language-code="{{:code}}") {{:name}}
            | {{/for}}
        .os
            | {{for os}}
            .osItem(class="actionSelectEnviroment {{if #index == 0}}selected{{/if}}" data-os-code="{{:code}}") {{:name}}
            | {{/for}}
    | {{/if}}

    .listContent

