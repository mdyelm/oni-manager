script(type="text/html" id="listEditor_table_timezone")
    | {{for languages}}
    | {{for ~root.os ~languageCode=code}}
    .list(data-language-code="{{:~languageCode}}" data-os-code="{{:code}}" class="hidden")
        table
            tr
                th コード
                th タイムゾーン名
                th 時間帯
                th 操作

            | {{for ~root.timezones[~languageCode][code]}}
            tr.listItem(data-index="{{:#index}}")
                td
                    input(data-fieldname="code" type="text" value="{{:code}}")
                td
                    input(data-fieldname="name" type="text" value="{{:name}}")
                td
                    input.short(data-fieldname="beginTime" type="time" value="{{:beginTime}}")
                    | ～
                    input.short(data-fieldname="endTime" type="time" value="{{:endTime}}")

                td
                    .menu
                        .button.actionRemoveListItem ×

            | {{/for}}

        .menu
            .button.actionAddListItem 追加する

    | {{/for}}
    | {{/for}}

