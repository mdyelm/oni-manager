            //-         | FileName
            //-     .preview: img(src="/images/001.jpg")
            //-     .button.buttonRemove.actionRemove
            //-         | <i class="fa fa-trash-o" aria-hidden="true"></i>

    .form
        input(type="file" name="menuBackgroundImage" id="file")
