extends ../_includes/_login_layout

block content
    .loginBox
        h1 <strong>鬼</strong>マネージャー
        form(action="/login/auth" method="post")
            .id
                input(type="text" name="login_ID" value="" placeholder="IDを入力")
            .pw
                input(type="password" name="login_PW" value="" placeholder="パスワードを入力")

            if message.error
                .message.error #{message.error}

            .submit
                input(type="submit" value="ログイン")

    .bg
        img(src="/images/bg.png" alt="")
